---
interface Props {
  post: Awaited<ReturnType<typeof import('astro:content').getCollection>>[number];
}

const { post } = Astro.props;
---

<a href={`/blog/${post.slug}`}>
  <div class="card">
    {post.data.image && <img src={post.data.image} alt={post.data.title} class="card-image" />}
    <h2>{post.data.title}</h2>
    <p class="description">{post.data.description}</p>
    <p class="date">{post.data.publishDate.toLocaleDateString()}</p>
    {post.data.tags && (
      <div class="tags">
        {post.data.tags.map(tag => <span class="tag">{tag}</span>)}
      </div>
    )}
  </div>
</a>

<style>
  .card {
    border: 1px solid #ddd;
    border-radius: 8px;
    padding: 15px;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    box-shadow: 0 2px 5px rgba(0,0,0,0.1);
    transition: transform 0.2s ease-in-out;
  }
  .card:hover {
    transform: translateY(-5px);
  }
  .card-image {
    width: 100%;
    height: 180px; /* Adjust as needed */
    object-fit: cover;
    border-radius: 4px;
    margin-bottom: 10px;
  }
  .card h2 {
    margin-top: 0;
    font-size: 1.5em;
    color: #333;
  }
  .card .description {
    color: #555;
    flex-grow: 1; /* Pushes date and tags to bottom */
  }
  .card .date {
    font-size: 0.9em;
    color: #888;
    margin-top: 10px;
  }
  .tags {
    margin-top: 10px;
  }
  .tag {
    display: inline-block;
    background-color: #eee;
    padding: 3px 8px;
    border-radius: 4px;
    font-size: 0.8em;
    margin-right: 5px;
    color: #666;
  }
</style>